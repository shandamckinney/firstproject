<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <h1>Order # <%= order.id %></h1>
    </div> <!-- /col -->
  <% end %>
</div>
<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
