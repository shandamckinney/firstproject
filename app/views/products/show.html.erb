<div class="container show">
  <div class="row">
    <div class="col-sm-12 col-lg-8 productinfoleft img-fluid">
        <%= image_tag(@product.image_url, class: "img-fluid") %>
    </div>
    <div class="col-sm-12 col-lg-4 productinforight">
        <p id="producttitle">
          <strong><%= @product.name %></strong>
        </p>
        <p id="productdescription">
          <%= @product.description %>
        </p>
        <p id="overview">
          <strong>Overview:</strong>
        </p>
        <p>
          <%= @product.colour %>
        </p>
        <p>
          <%= @product.price %>
        </p>
        <p> Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
        </p>
    </div>
  </div>
</div>

    <div class="column left"
        <%= render 'comments' %>
    </div>
    <div class="column right"
        <%= render 'new_comment' %>
    </div>
  </div>


      </div>
      <%= will_paginate @comments %>
    </div
  </div>




