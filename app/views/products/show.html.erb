<div class="showpagebody">
<p id="notice"><%= notice %></p>
  <div id="showimage"
    <p>
      <%= image_tag(@product.image_url) %>
    </p>
  </div>
  <div id="showinfo">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
    <p>
      <strong>Prices:</strong>
      <%= @product.prices %>
    </p>
  </div>
</div>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
